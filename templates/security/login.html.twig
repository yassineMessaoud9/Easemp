{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
 <style>
    .custom-file-button { input[type="file"] { margin-left: -2px !important;

    &::-webkit-file-upload-button { display: none; } &::file-selector-button {
    display: none; } }

    &:hover { label { background-color: #dde0e3; cursor: pointer; } } }
  </style>
  <div class="container mt-5" style="padding-bottom:160px !important;">
    <div class="card">
      <div class="card-body">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputUsername mt-3">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mt-3 " autocomplete="username" required autofocus><br>
    <label for="inputPassword mb-3">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
  </div>
    </div>
  </div>
   
{% endblock %}
