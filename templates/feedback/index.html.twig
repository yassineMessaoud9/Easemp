{% extends 'baseadmin.html.twig' %}

{% block title %}Feedback index{% endblock %}

{% block body %}
  <div class=" mt-5">
<div class="container-fluid px-4">
                      
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Liste des feedback
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedback %}
            <tr>
                <td>{{ feedback.id }}</td>
                <td>{{ feedback.name }}</td>
                <td>{{ feedback.email }}</td>
                <td>{{ feedback.message }}</td>
                <td>{{ feedback.rate }}</td>
                <td>    {{ include('feedback/_delete_form.html.twig') }}

                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
  </div>                        </div>
                    </div>

{% endblock %}
