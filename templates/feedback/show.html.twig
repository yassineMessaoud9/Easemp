{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
    <h1>Feedback</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feedback.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ feedback.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ feedback.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ feedback.message }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ feedback.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_feedback_index') }}">back to list</a>

    <a href="{{ path('app_feedback_edit', {'id': feedback.id}) }}">edit</a>

    {{ include('feedback/_delete_form.html.twig') }}
{% endblock %}
