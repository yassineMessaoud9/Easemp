{% extends 'baseadmin.html.twig' %}

{% block title %}Hello ListeEntrController!{% endblock %}

{% block body %}
  <div class=" mt-5">
<div class="container-fluid px-4">
                      
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Liste des employers
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">     <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Domaine</th>
                <th>Number of employees</th>
                <th>Email</th>
                <th>Numero</th>
                <th>Place</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for findemp in findemps %}
            <tr>
                <td>{{ findemp.id }}</td>
                <td>{{ findemp.nom }}</td>
                <td>{{ findemp.domaine }}</td>
                <td>{{findemp.nbremp}}</td>
                <td>{{ findemp.email }}</td>
                <td>{{ findemp.numero }}</td>
                <td>{{ findemp.place }}</td>
                <td>
                    <a class="btn btn-outline-info" href="{{ path('app_findemp_edit', {'id': findemp.id}) }}">Envoi email</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
  </table>
  </div>                        </div>
                    </div>
{% endblock %}
